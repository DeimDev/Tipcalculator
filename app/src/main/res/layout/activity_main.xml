<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:useDefaultMargins="true"
    tools:context="dev.deim.android.tipcalculator.MainActivity">

    <EditText
        android:id="@+id/amount_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:digits="0123456789"
        android:inputType="number"
        android:maxLength="6" />

    <TextView
        android:id="@+id/amount_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:background=" #BBDEFB"
        android:elevation="4dp"
        android:hint="@string/enter_amount"
        android:padding="12dp"
        tools:targetApi="lollipop" />


    <TextView
        android:id="@+id/percent_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="end|center_vertical"
        android:layout_row="1"
        android:text="@string/percent" />

    <SeekBar
        android:id="@+id/percent_SeecBar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:max="30"
        android:progress="15" />

    <TextView
        android:id="@+id/tipLabel_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="end"
        android:layout_row="2"
        android:text="@string/tip" />

    <TextView
        android:id="@+id/tip_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:background="#FFE0B2"
        android:gravity="center"
        android:padding="12dp"
        android:elevation="4dp"
        tools:targetApi="lollipop" />

    <TextView
        android:id="@+id/totalLabel_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="end"
        android:layout_row="3"
        android:text="@string/total" />

    <TextView
        android:id="@+id/total_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:background="#FFE0B2"
        android:gravity="center"
        android:padding="12dp"
        android:textScaleX="0"/>

</GridLayout>
